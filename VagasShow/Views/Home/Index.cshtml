@{
    ViewBag.Title = "Home Page";
}
@model IEnumerable<VagasShow.Models.Vaga>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Vagas</title>
</head>
<body>
    <p>
        @Html.ActionLink("Inserir vaga", "Create")
    </p>
    <br>
    @using (Html.BeginForm())
    {
        <table class="filtro">
            <tr>
                <th>
                    @Html.Display("Pesquisar")@Html.TextBox("pesquisa")
                </th>
                <th>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Filtrar" class="btn btn-default" />
                        </div>
                    </div>
                </th>
            </tr>
        </table>
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataDeCriacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cargo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remuneracao)
            </th>
            <th></th>
        </tr>

        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataDeCriacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cargo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Remuneracao)
                    </td>
                    <td>
                        <!--
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        -->
                    </td>
                </tr>
            }
        }
        </table>
    </body>
</html>
