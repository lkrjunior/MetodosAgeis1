@model VagasShow.Models.Vaga

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    
    
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
    <div class="form-horizontal">
        <h4>Vaga</h4>
        <table>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Titulo)</th>
                <th>@Html.TextBoxFor(model => model.Titulo)</th>
                <th>@Html.ValidationMessageFor(model => model.Titulo)</th>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Cargo)</th>
                <th>@Html.TextBoxFor(model => model.Cargo)</th>
                <th>@Html.ValidationMessageFor(model => model.Cargo)</th>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Descricao)</th>
                <th>@Html.TextBoxFor(model => model.Descricao)</th>
                <th>@Html.ValidationMessageFor(model => model.Descricao)</th>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Remuneracao)</th>
                <th>@Html.TextBoxFor(model => model.Remuneracao)</th>
            </tr>
            <tr>
                <th></th>
            </tr>
        </table>
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar vaga" class="btn btn-default" />
            </div>
        </div>
    </div>
    }
    
    <div>
        @Html.ActionLink("Voltar", "Index")
    </div>
</body>
</html>
